html
    head
        link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-wEmeIV1mKuiNpC+IOBjI7aAzPcEZeedi5yW5f2yOq55WWLwNGmvvx4Um1vskeMj0" crossorigin="anonymous")
        title= 'Desafio 11 - Pug'
    body

        header 
            include partials/header.pug

        section(class="container")
            h1(class="display-6")= 'Listado de productos' 
            
            if mensaje
                table(class="table table-striped") 
                    thead(class="table-dark") 
                        tr 
                            th(scope="col")= 'Nombre'
                            th(scope="col")= 'Precio'
                            th(scope="col")= 'Foto'
                    tbody 
                        - const productos = mensaje
                        each producto in productos 
                            tr 
                                th(scope="row")= producto.title
                                th= producto.price 
                                th
                                    img(src=producto.thumbnail alt=producto.title style="height: 100px; width: 100px")
            else 
                p(class="alert alert-warning")= 'No hay productos!'

        footer 
            include partials/footer.pug

        script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-p34f1UUtsS3wqzfto5wAAmdvj+osOnFyQFpp4Ua3gs/ZVWx6oOypYoCJhGGScy+8" crossorigin="anonymous")
        script(src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js" integrity="sha384-IQsoLXl5PILFhosVNubq5LC7Qb9DXgDA9i+tQ8Zj3iwWAwPtgFTxbJ8NT4GN1R8p" crossorigin="anonymous")
        script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.min.js" integrity="sha384-lpyLfhYuitXl2zRZ5Bn2fqnhNAKOAaM/0Kr9laMspuaMiZfGmfwRNFh8HlMy49eQ" crossorigin="anonymous")

