html
    head
        link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-wEmeIV1mKuiNpC+IOBjI7aAzPcEZeedi5yW5f2yOq55WWLwNGmvvx4Um1vskeMj0" crossorigin="anonymous")
        title= 'Desafio 11 - Pug'
    body

        header 
            include partials/header.pug

        section(class="container")
            h1(class="display-6")= 'Ingrese Producto'
            form(action="/api/productos" method="post" style="height: 500px; width: 500px")
                div(class="input-group mb-3") 
                    span(class="input-group-text" id="basic-addon1")= 'Title' 
                    input(name="title" type="text" class="form-control" placeholder="Title" aria-label="Username" aria-describedby="basic-addon1") 
                div(class="input-group mb-3")
                    span(class="input-group-text")= '$'
                    input(name="price" type="text" class="form-control" placeholder="Price" aria-label="Amount (to the nearest dollar)")
                    span(class="input-group-text")= '999.99'
                div(class="input-group mb-3")
                    span(class="input-group-text" id="basic-addon3")= 'https://example.com/'
                    input(name="thumbnail" type="text" class="form-control" id="basic-url" aria-describedby="basic-addon3")
                input(type="hidden" name="form" value="1")
                button(type="submit" class="btn btn-primary")= 'Agregar'      
                               
        footer 
            include partials/footer.pug

        script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-p34f1UUtsS3wqzfto5wAAmdvj+osOnFyQFpp4Ua3gs/ZVWx6oOypYoCJhGGScy+8" crossorigin="anonymous")
        script(src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js" integrity="sha384-IQsoLXl5PILFhosVNubq5LC7Qb9DXgDA9i+tQ8Zj3iwWAwPtgFTxbJ8NT4GN1R8p" crossorigin="anonymous")
        script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.min.js" integrity="sha384-lpyLfhYuitXl2zRZ5Bn2fqnhNAKOAaM/0Kr9laMspuaMiZfGmfwRNFh8HlMy49eQ" crossorigin="anonymous")

